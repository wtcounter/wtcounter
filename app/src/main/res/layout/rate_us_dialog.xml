<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/dialogView"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white">

  <ImageView
      android:id="@+id/ivSave"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_120sdp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/bg_dialog"
      android:paddingBottom="@dimen/_30sdp"
      android:paddingTop="@dimen/_30sdp"
      android:tint="@color/grey_100"
      app:srcCompat="@drawable/ic_rate_star"
      />

  <ImageView
      android:id="@+id/ivCross"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:paddingEnd="@dimen/_8sdp"
      android:paddingStart="@dimen/_8sdp"
      android:paddingTop="@dimen/_8sdp"
      android:tint="@color/grey_100"
      app:srcCompat="@drawable/ic_clear_black_24dp"
      />

  <TextView
      android:id="@+id/tvReportDesc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ivSave"
      android:layout_marginEnd="@dimen/_16sdp"
      android:layout_marginStart="@dimen/_16sdp"
      android:layout_marginTop="@dimen/_16sdp"
      android:minHeight="@dimen/_32sdp"
      android:text="@string/rate_us_text"
      />

  <Button
      android:id="@+id/btnSave"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/_30sdp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/tvReportDesc"
      android:paddingEnd="@dimen/_16sdp"
      android:paddingRight="@dimen/_16sdp"
      android:layout_marginTop="@dimen/_24sdp"
      android:background="@null"
      android:gravity="end"
      android:text="@string/rate_us_yes"
      android:textColor="@color/secondaryColor"
      />

  <Button
      android:id="@+id/btnLater"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/_30sdp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/btnSave"
      android:paddingEnd="@dimen/_16sdp"
      android:paddingRight="@dimen/_16sdp"
      android:background="@null"
      android:gravity="end"
      android:text="@string/rate_us_later"
      android:textColor="@color/secondaryColor"
      />

  <Button
      android:id="@+id/btnNever"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/_30sdp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/btnLater"
      android:paddingEnd="@dimen/_16sdp"
      android:paddingRight="@dimen/_16sdp"
      android:background="@null"
      android:gravity="end"
      android:minHeight="@dimen/_32sdp"
      android:text="@string/rate_us_never"
      android:textColor="@color/secondaryColor"
      />


</RelativeLayout>


