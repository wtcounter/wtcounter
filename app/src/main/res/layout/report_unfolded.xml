<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:showIn="@layout/report_summary"
    >

  <android.support.constraint.ConstraintLayout
      android:id="@+id/clContent"
      android:layout_width="0dp"
      android:layout_height="@dimen/_200sdp"
      android:layout_marginBottom="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_30sdp"
      android:layout_marginLeft="@dimen/_20sdp"
      android:layout_marginRight="@dimen/_30sdp"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <TextView
        android:id="@+id/tvReportText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        android:minHeight="@dimen/_50sdp"
        android:textColor="@color/primaryLightColor"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello world whats up"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clMainReport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/clExtraReport"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReportText"
        >
      <TextView
          android:id="@+id/tvCharactersLabelContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/characters"
          android:textColor="@color/secondaryTextColor"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@id/tvCharactersContent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/tvWordsContent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvCharactersContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/secondaryTextColor"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/tvWordsContent"
          app:layout_constraintTop_toBottomOf="@id/tvCharactersLabelContent"
          tools:text="2000"
          />


      <TextView
          android:id="@+id/tvWordsLabelContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/words"
          android:textColor="@color/secondaryTextColor"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@id/tvWordsContent"
          app:layout_constraintLeft_toRightOf="@id/tvCharactersLabelContent"
          app:layout_constraintRight_toLeftOf="@id/tvSentencesLabelContent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvWordsContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/secondaryTextColor"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/tvCharactersContent"
          app:layout_constraintRight_toLeftOf="@id/tvSentencesContent"
          app:layout_constraintTop_toBottomOf="@id/tvWordsLabelContent"
          tools:text="212"
          />


      <TextView
          android:id="@+id/tvSentencesLabelContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/sentences"
          android:textColor="@color/secondaryTextColor"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@id/tvSentencesContent"
          app:layout_constraintLeft_toRightOf="@id/tvWordsLabelContent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvSentencesContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/secondaryTextColor"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/tvWordsContent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvCharactersLabelContent"
          tools:text="12"
          />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clExtraReport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clMainReport"
        >

      <TextView
          android:id="@+id/tvParagraphsLabelContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/paragraphs"
          android:textColor="@color/secondaryTextColor"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@id/tvParagraphsContent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/tvSizeLabelContent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvParagraphsContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/secondaryTextColor"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/tvSizeContent"
          app:layout_constraintTop_toBottomOf="@id/tvParagraphsLabelContent"
          tools:text="212"
          />


      <TextView
          android:id="@+id/tvSizeLabelContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/size"
          android:textColor="@color/secondaryTextColor"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@id/tvSizeContent"
          app:layout_constraintLeft_toRightOf="@id/tvParagraphsLabelContent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvSizeContent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/secondaryTextColor"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/tvParagraphsContent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvSizeLabelContent"
          tools:text="12"
          />


    </android.support.constraint.ConstraintLayout>

  </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>